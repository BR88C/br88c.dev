{
  "include": ["./src/**/*"],
  "exclude": [],
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  }
}
